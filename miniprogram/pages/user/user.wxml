<!--miniprogram/pages/user/user.wxml-->
<view class="amountBg">
  <view class="account">
    <button class="UserIn" type="primary" wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 登录 </button>
    <block wx:else>
      <image  bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>

<view wx:if="{{hasUserInfo}}" class="content">
    <view class="order">
        <view class="recent">
         <navigator url="../redirect/redirect?title=redirect" hover-class="other-navigator-hover">最近听</navigator>
        </view>
        <view class="recent">
         <navigator url="../redirect/redirect?title=redirect" hover-class="other-navigator-hover">喜欢</navigator>
        </view>
        <view class="recent">
         <navigator url="../redirect/redirect?title=redirect" hover-class="other-navigator-hover">歌单</navigator>
        </view>
        <view class="recent">
           <navigator url="../redirect/redirect?title=redirect" hover-class="other-navigator-hover">下载</navigator>
        </view>
    </view>
</view>
</view>
